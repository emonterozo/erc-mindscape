<h2 hidden="true" id="user">{{user}}</h2>
<h2 hidden="true" id="categoryStyle">{{random}}</h2>


<div class="card ">
  <div class="card-header text-white bg-dark">
    <div class="row">
    <div class="col d-flex flex-row">
        <h5 class="p-1">Category:</h5>
        <h5 class="p-1" id="category">{{category}}</h5>
    </div>
    <div class="col d-flex flex-row">
        <h5 class="p-1">Wrong:</h5>
        <h5 class="p-1" id="wrong"></h5>
    </div>
    <div class="col d-flex flex-row">
        <h5 class="p-1">Score:</h5>
        <h5 class="p-1" id="score-item"></h5>
    </div>
    <div class="col d-flex flex-row">
        <h5 class="p-1">Percentage:</h5>
        <h5 class="p-1" id="percent"></h5>
    </div>
    </div>
  </div>
  
   <div class="card-body container">
    <div class="row ">
     <div class="col text-center ">
      <label for="question" class="h2 pt-2">Question:</label>
      <p name="question" class="h4 p-2">{{question}}</p>
     </div>
    </div>
    <div class="row container ">
     
        {{#each choices }}
        <div class="w-100 p-3 m-1" style="background-color: #eee;">
          <input class="d-inline" name="choices" value={{@key}} type="radio">
          <p class=" d-inline h6">{{this}}</p>
        </div>
        {{/each}}
        
     
    </div>


   </div>

   <div class="card-footer bg-dark text-white">
    <div class="row">
    <div class="col">
     
    </div>
    <div class="col col-lg-2">
      <button class="btn btn-primary btn-block" id="checkAnswer">Submit</button>
    </div>
    <div class="col col-lg-2">
      <button type="button" class="btn btn-secondary btn-block" data-toggle="modal" data-target="#modalShowAnswer">
      Show Answer
      </button>
    </div>
    <div class="col col-lg-2">
      <button type="button" class="btn btn-secondary btn-block" data-toggle="modal" data-target="#modalQuit">
      Quit
      </button>
    </div>
  </div>
   </div>
</div>

<!-- Quit Modal -->
<div class="modal fade" id="modalQuit" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-warning text-white">
        <h5 class="modal-title" id="exampleModalCenterTitle"><cite title="Source Title">Mindscape Notice</cite></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <h5>Are you sure you want to exit ?</h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="userQuit()">Confirm</button>
      </div>
    </div>
  </div>
</div>

<!-- Game Over Modal -->
<div class="modal fade" id="modalGameOver" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="exampleModalCenterTitle"><cite title="Source Title">Mindscape Notice</cite></h5>
      </div>
      <div class="modal-body text-center">
        <h5>Game Over</h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="userQuit()">Confirm</button>
      </div>
    </div>
  </div>
</div>

<!-- Instruction Modal -->
<div class="modal fade" id="modalInstruction" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="exampleModalCenterTitle"><cite title="Source Title">Welcome to Mindscape</cite></h5>
      </div>
      <div class="modal-body text-center">
        <h5><cite>Read the question and select the correct answer</cite></h5>
        <h6 class="text-muted pt-2">Note: 5 incorrect answer and you will be Game Over</h6>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Confirm</button>
      </div>
    </div>
  </div>
</div>

<!-- Wrong Alert -->
<div class="modal fade" id="modalIncorrect" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-warning text-white">
        <h5 class="modal-title" id="exampleModalCenterTitle"><cite title="Source Title">Mindscape Notice</cite></h5>
      </div>
      <div class="modal-body text-center">
        <h5>Wrong Answer !</h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Confirm</button>
      </div>
    </div>
  </div>
</div>

<!-- Show Answer Modal -->
<div class="modal fade" id="modalShowAnswer" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-warning text-white">
        <h5 class="modal-title" id="exampleModalCenterTitle"><cite title="Source Title">Mindscape Notice</cite></h5>
      </div>
      <div class="modal-body text-center">
        <h5 class="text-muted"><cite>Correct Answer is:</cite> </h5>
        <h5 class="p-2" id="correct">{{correct}}</h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="userShowAnswer()">Confirm</button>
      </div>
    </div>
  </div>
</div>

<!-- No Selection Modal -->
<div class="modal fade" id="modalNoSelection" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-dialog-centered " role="document">
    <div class="modal-content">
      <div class="modal-header bg-warning text-white">
        <h5 class="modal-title" id="exampleModalCenterTitle"><cite title="Source Title"> Mindscape Notice</cite></h5>
      </div>
      <div class="modal-body text-center">
        <h5>Please select an answer</h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Confirm</button>
      </div>
    </div>
  </div>
</div>


<script src="/javascripts/quizbee.js"></script>